{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "text-transformer",
  "title": "Text Transformer",
  "description": "Transform text into different formats",
  "icon": "icon.png",
  "author": "rknightuk",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "transform-text",
      "title": "Transform Text",
      "description": "Transform text into different formats",
      "mode": "view",
      "arguments": [
        {
          "name": "text",
          "type": "text",
          "placeholder": "Enter text to transform",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.72.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}